{
    "title": "Employee Profile",
    "model": "EmployeeProfile",
    "splitFields": [
        {
            "fieldName": "EmployeeFirstName",
            "fieldLabel": "FirstName"
        },
        {
            "fieldName": "EmployeeLastName",
            "fieldLabel": "LastName"
        }
    ],
    "formFields": [
        {
            "fieldName": "EmployeeEmpNo",
            "fieldLabel": "EmpNo",
            "disabled": true
        },
        {
            "fieldName": "EmployeeFirstName",
            "fieldLabel": "First Name"
        },
        {
            "fieldName": "EmployeeLastName",
            "fieldLabel": "Last Name"
        },
        {
            "fieldName": "EmployeeBirthDate",
            "fieldLabel": "Birth Date",
            "filter": "date:'shortDate'"
        },
        {
            "fieldName": "EmployeeGender",
            "fieldLabel": "Gender"
        },
        {
            "fieldName": "EmployeeHireDate",
            "fieldLabel": "Hire Date",
            "filter": "date:'shortDate'"
        }
    ],
    "children": [
        {
            "name": "Salary",
            "title": "Salary History",
            "model": "Salary",
            "viewMode": "multiple",
            "listFields": [
                {
                    "fieldName": "SalaryAmount",
                    "fieldLabel": "Amount",
                    "filter": "currency"
                },
                {
                    "fieldName": "SalaryFromDate",
                    "fieldLabel": "From",
                    "filter": "date:'shortDate'"
                },
                {
                    "fieldName": "SalaryToDate",
                    "fieldLabel": "To",
                    "filter": "date:'shortDate'"
                }
            ]
        },
        {
            "name": "Title",
            "title": "Title History",
            "model": "Title",
            "viewMode": "multiple",
            "listFields": [
                {
                    "fieldName": "TitleName",
                    "fieldLabel": "Title"
                },
                {
                    "fieldName": "TitleFromDate",
                    "fieldLabel": "From",
                    "filter": "date:'shortDate'"
                },
                {
                    "fieldName": "TitleToDate",
                    "fieldLabel": "To",
                    "filter": "date:'shortDate'"
                }
            ]
        }
    ]
}
